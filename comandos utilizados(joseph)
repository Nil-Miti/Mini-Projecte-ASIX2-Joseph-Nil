-- Crear tabla grupos
CREATE TABLE grupos (
    ID_GRUPO INT AUTO_INCREMENT,
    NOMBRE_GRUPO VARCHAR(50) NOT NULL,
    PRIMARY KEY (ID_GRUPO)
);

-- Crear tabla usuarioxgrupo
CREATE TABLE usuarioxgrupo (
    ID_REGISTRO INT AUTO_INCREMENT,
    ID_USER INT,
    ID_GRUPO INT,
    UNIQUE KEY unique_user_grupo (ID_USER, ID_GRUPO), -- Asegura que un usuario no est√© dos veces en el mismo grupo
    FOREIGN KEY (ID_USER) REFERENCES usuario(ID_USER),
    FOREIGN KEY (ID_GRUPO) REFERENCES grupos(ID_GRUPO),
    PRIMARY KEY (ID_REGISTRO)
);

-- Eliminar columna GRUPO de la tabla usuario
ALTER TABLE usuario DROP COLUMN GRUPO;
